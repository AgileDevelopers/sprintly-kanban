{
  "name": "manifold",
  "version": "0.0.1",
  "devDependencies": {
    "backdash": "^1.1.2-2.4.1",
    "lodash": "^2.4.1",
    "jquery": "^2.1.1",
    "envify": "^1.2.1",
    "react": "^0.10.0",
    "reactify": "^0.13.1",
    "browserify": "^4.2.0",
    "tape": "^2.13.3",
    "watchify": "^0.10.2",
    "backbone-route-control": "^0.1.0",
    "browserify-swap": "^0.2.1",
    "supermodel": "git://github.com/wookiehangover/supermodel.git",
    "topcoat": "git://github.com/topcoat/topcoat.git",
    "topcoat-icons": "^0.2.0",
    "es5-shim": "^3.4.0",
    "faucet": "0.0.1",
    "testling": "^1.7.0",
    "rewireify": "0.0.9",
    "sinon": "^1.10.2"
  },
  "scripts": {
    "test": "testling | faucet",
    "watch": "watchify app -o public/js/manifold.js -v -d",
    "watch-test": "NODE_PATH=$NODE_PATH:./app watchify test -o test/bundle.js -t reactify -t rewireify -v -d",
    "build": "browserify app -o public/js/manifold.js -d && NODE_PATH=./app:$NODE_PATH browserify test -o test/bundle.js -t reactify -t rewireify -d",
    "build-production": "NODE_ENV=production browserify app | uglifyjs -cm > public/js/manifold.min.js"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "testling": {
    "browsers": [
      "firefox/28.0"
    ],
    "scripts": "test/bundle.js"
  }
}
