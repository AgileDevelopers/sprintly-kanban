{
  "name": "manifold",
  "version": "0.0.1",
  "devDependencies": {
    "backdash": "^1.1.2-2.4.1",
    "bootstrap": "^3.3.1",
    "browserify": "^8.0.2",
    "flux": "^2.0.1",
    "gulp": "^3.8.10",
    "gulp-csso": "^0.2.9",
    "gulp-less": "^2.0.1",
    "gulp-rename": "^1.2.0",
    "gulp-sourcemaps": "^1.2.8",
    "jquery": "^2.1.3",
    "lodash": "^2.4.1",
    "moment": "^2.8.4",
    "react": "^0.12.2",
    "react-bootstrap": "^0.13.0",
    "reactify": "^0.17.1",
    "router": "git://github.com/tildeio/router.js",
    "sprintly-data": "git+ssh://git@github.com:sprintly/sprintly-data.git",
    "uglify-js": "^2.4.14",
    "watchify": "^2.2.1"
  },
  "scripts": {
    "test": "testling | faucet",
    "watchify": "watchify app -o public/js/manifold.js -v -d",
    "watch-test": "NODE_PATH=$NODE_PATH:./app watchify test -o test/bundle.js -t reactify -t rewireify -v -d",
    "build": "browserify app -o public/js/manifold.js -d && NODE_PATH=./app:$NODE_PATH browserify test -o test/bundle.js -t reactify -t rewireify -d",
    "build-production": "NODE_ENV=production browserify app | uglifyjs -cm > public/js/manifold.min.js",
    "build-less": "gulp less"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  }
}
